<%- include('partials/header') %>

    <body class="body-login">

        <div class="row">
            <div class="login-div-card">
                <h1 class="heading-primary">Socnet</h1>
                    <div class="card card-login">
                        
                        <h3 class="msglogin">
                            <%= msglogin %>
                        </h3>
                        <form action="/login" class="card-form" method="POST">
                          
                                <input name="username" class="card-form-input" type="text" placeholder="username" autocomplete="off">
                                <input name="password" class="card-form-input card-form-input-2" type="password" placeholder="password"
                                    autocomplete="off">
                           
                            <button type="submit" class="card-form-button">Log in</button>
                        </form>
                        <div class="forgotpassword">
                            <a class="forgotpassword-link" href="/forgotpassword">Forgot password?</a>
                        </div>
                        <div class="log-in">
                            <a href="/signup" class="log-in-button">Sign up</a>
                        </div>
                    </div>
                
                </div>
            </div>

        </div>
    </body>
    <%- include('partials/footer') %>
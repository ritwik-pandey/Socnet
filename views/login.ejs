<%- include('partials/header') %>

    <body class="body-login">

        <div class="row">
            <div class="col-1-of-2">
                <h1 class="heading-secondary-login">Share your secrets anonymously!</h1>
                <h4 class="heading-tertiary-login">Share your thoughts without being identified. <br>
                    Even we don't know who you are!</h4>
            </div>

            <div class="col-1-of-2">
                <div class="card">
                    <h1 class="heading-primary">Socnet</h1>
                    <h3 class="msglogin"><%= msglogin %></h3>
                    <form action="/login" class="card-form" method="POST">
                        <input name="username" class="card-form-input" type="text" placeholder="username">
                        <input name="password" class="card-form-input-2" type="password" placeholder="password" autocomplete="off">
                        <button type="submit" class="card-form-button">Log in</button>
                    </form>
                </div>
                <div class="forgotpassword" >
                    <a class="forgotpassword-link" href="/forgotpassword">Forgot password?</a>
                </div>
                <div class="log-in">
                    <h3 class="h3-heading-login"><span>or</span></h3>
                    <h4 class="h4-heading-login">Don't have an account?</h4>
                    <a href="/signup" class="log-in-button">Sign up</a>
                </div>
            </div>
        </div>
    </body>
<%- include('partials/footer') %>
<%- include('partials/header') %>

    <body class="body-signup">
        <h1 class="heading-primary heading-primary-login">Socnet</h1>
        <div class="row">
            <div class="login-div-card">
                <div class="card-signup card-login card">

                    <h4 class="msglogin">
                        <%= msg %>
                    </h4>
                    <form action="/signup" class="card-form" method="POST">
                        <input name="username" class="card-form-input" type="text" placeholder="username"
                            autocomplete="off" required="true">
                        <input name="email" class="card-form-input" type="email" placeholder="email" autocomplete="off"
                            required="true">
                        <input name="password" class="card-form-input" type="password" placeholder="password"
                            autocomplete="off" required="true">
                        <button type="submit" class="card-form-button">Sign up</button>
                    </form>
                    <div class="signup">
                        <a href="/login" class="log-in-button">Log in</a>
                    </div>
                </div>
            </div>
        </div>

    </body>

    <%- include('partials/footer') %>
<%- include('partials/header') %>

    <body class="body-password">
        <h1 class="heading-primary heading-primary-login">Socnet</h1>
        <div class="card-login card">

            <form action="/forgotpassword" class="card-form" method="POST">
                <h3 class="msglogin"><%=msg%></h3>
                <input name="username" class="card-form-input" type="text" placeholder="username" autocomplete="off" required="true">
                <input name="email" class="card-form-input" type="email" placeholder="email" autocomplete="off" required="true">
                <input type="password" class="card-form-input" name="password" placeholder="New password" autocomplete="off" required="true">
                <input type="password" class="card-form-input" name="confirmpassword" placeholder="Confirm password" autocomplete="off" required="true">
                <button type="submit" class="card-form-button">Send link</button>
            </form>
            <div class="log-in-forgotpassword">
                <a href="/signup" class="log-in-button">Sign up</a>
            </div>
            <div class="signup-forgotpassword">
                <a href="/login" class="log-in-button">Log in</a>
            </div>
        </div>

    </body>

    <%- include('partials/footer') %>